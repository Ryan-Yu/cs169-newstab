<%= form_tag(group_path(@group.id), :action => 'user#search', :method => 'get', :class => 'navbar-form navbar-search', :html => {:autocomplete => "off"}) do %>
  <%= text_field_tag :search, params[:search], :id => 'search_field', :class => 'form-control', :placeholder => 'Search users by name to add to group' %>
  <%= submit_tag "Search", :name => nil, :class => "btn btn-custom" %> 
<% end %> 