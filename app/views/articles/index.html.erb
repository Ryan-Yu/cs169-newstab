<h1>My Article Feed</h1>

<table>
  <thead>
    <tr>
      <th>Posted By</th>
      <th>Likes</th>
      <th>Url</th>
      <th>Title</th>
      <th>Datetime</th>
      <th>Content</th>
      <th>Initial Comment</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.user.first_name %> <%= article.user.last_name %></td>
        <td><%= article.likes.count %></td>
        <td><%= article.url %></td>
        <td><%= article.title %></td>
        <td><%= article.datetime %></td>
        <td><%= article.content %></td>
        <td><%= article.initial_comment %></td>
        <td><%= image_tag article.photo %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
