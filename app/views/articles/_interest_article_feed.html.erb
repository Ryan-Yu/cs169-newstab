<div id="interest-article-feed">
  <!-- Article feed (articles that are in categories the user is interested in) -->
  <div class="category-title">
    <h1>My recommended articles</h1>
    <% if @interested_articles.nil? or @interested_articles.empty? %>
      There are no articles to display.
    <% end %>
  </div>
  
  <div class="row">
    <% unless @interested_articles.nil? or @interested_articles.empty? %>
      <%= render @interested_articles %>
    <% end %>
  </div>
  
  <div class="paginate-container">
      <%= paginate @interested_articles, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-sm" unless (@interested_articles.nil? or @interested_articles.empty?) %>
  </div>
  <br />
</div>