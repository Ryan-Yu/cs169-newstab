<%= form_tag(articles_path, :action => 'search', :method => 'get', :class => 'navbar-form navbar-left navbar-search', :html => {:autocomplete => "off"}) do %>
  <%= text_field_tag :search, params[:search], :id => 'search_field', :class => 'form-control', :placeholder => 'Search articles by title', :autocomplete => :off %>
  <%= submit_tag "Search", :name => nil, :class => "btn btn-custom" %> 
<% end %>